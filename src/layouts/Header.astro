---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<header class="h-24 w-full px-10 shadow-lg">
  <div
    class="m-auto flex h-full max-w-[var(--content-width)] items-center justify-around gap-16"
  >
    <img src="images/herosi.svg" class="h-[30px] w-[108px] object-cover" />
    <span class="text-3xl font-medium">{title}</span>
  </div>
</header>

---
import LogoHerosi from "../components/LogoHerosi.astro";
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<header class="relative h-24 w-full px-10 shadow-lg">
  <div
    style=`width: 40%`
    class:list={[
      "absolute top-0 -z-10 h-full bg-[var(--dark-primary)]",
      "left-0",
    ]}
  >
    <svg
      viewBox="0 0 15 100"
      class:list={[
        "absolute top-0 h-full fill-[var(--dark-primary)]",
        "left-full",
      ]}
    >
      <polygon points="0 0, 15 100, 0 100"></polygon>
    </svg>
  </div>
  <div
    class="m-auto flex h-full max-w-[var(--content-width)] items-center justify-around gap-16"
  >
    <div class="fill-white">
      <LogoHerosi width={150} />
    </div>
    <span class="text-3xl font-medium">{title}</span>
  </div>
</header>

---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<header class="w-full h-20 p-10 shadow-lg">
  <div
    class="flex h-full items-center gap-16 max-w-[var(--content-width)] m-auto"
  >
    <img src="images/logo.png" class="h-[30px] w-[108px] object-cover" />
    <span class="uppercase">{title}</span>
    <button
      class="text-white px-4 sm:px-8 py-2 sm:py-3 bg-sky-700 hover:bg-sky-800"
      >...</button
    >
  </div>
</header>
